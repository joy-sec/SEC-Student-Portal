
<LinearLayout android:id="@+id/lays1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_bg"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <View
                    android:layout_width="5dp"
                    android:layout_height="100dp"
                    android:background="#2fa73b"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/l2"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageButton android:id="@+id/card_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:src="@drawable/camera"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"/>
                    <Button
                        android:id="@+id/card_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:text="Meeting with Adrian"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:layout_marginLeft="7dp"

                        android:textColor="#31328e"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l2"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Today : 5:40 pm"
                        android:id="@+id/card_title"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:textStyle="bold" />




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear"
                    android:background="@drawable/cardview_bg"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"></View>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/btn_edit"

                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roun_rect_lightgray"
                        android:gravity="center"
                        android:text="Edit"
                        android:textColor="@color/colorGray"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roun_rect_lightgray"
                        android:gravity="center"
                        android:id="@+id/btn_delete"

                        android:text="Delete"
                        android:textColor="@color/colorGray"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roun_rect_lightgray"
                        android:gravity="center"
                        android:text="Comment"
                        android:id="@+id/btn_comment"
                        android:textColor="@color/colorGray"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorLightGray"
        android:layout_height="2dp">

    </LinearLayout>
</LinearLayout>