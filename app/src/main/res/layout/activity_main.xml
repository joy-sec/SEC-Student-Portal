<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pappu.studentportal.MainActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_below="@+id/layy1"
        android:layout_width="fill_parent"
        android:scrollbars="none"
        android:background="#fff"
        android:layout_height="fill_parent"
        tools:ignore="UnknownId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_vie1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/lay11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myract"

                    android:orientation="horizontal">





                    <TextView
                        android:id="@+id/display"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="#CF000F"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20dip"
                        android:text="12:40 AM\n Friday"
                        android:textColor="#ffffff"

                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/img55"
                        android:layout_width="fill_parent"
                        android:layout_height="130dp"
                        android:padding="20dp"
                        android:layout_weight="1"

                        android:background="#ac1c26"
                        android:layout_toRightOf="@+id/textView25"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ask"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/vv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/myract"

                android:orientation="horizontal">




                <ImageView
                    android:id="@+id/vtv"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:padding="20dp"
                    android:background="@drawable/bk"
                    android:layout_toRightOf="@+id/textView25"
                    android:scaleType="fitCenter"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/myract"

                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Introdction"
                    android:textColor="#fff"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:background="#CF000F"
                    android:layout_height="50dp" />
            </LinearLayout>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_vie2"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/lay1"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:background="@drawable/linear"
                    android:clickable="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/forum"
                        />

                    <TextView
                        android:id="@+id/btn"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_toRightOf="@+id/img5"
                        android:gravity="left|center"
                        android:textSize="20dip"
                        android:layout_marginLeft="10dp"

                        android:layout_gravity="center"

                        android:layout_marginBottom="2dp"
                        android:text="Ask Question? Timeline"
                        android:textColor="#020202"

                        android:textStyle="bold" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:background="#736969"
                android:layout_height="1dp" />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_vie6"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/lay101"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:background="@drawable/linear"
                    android:clickable="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/forum"
                        />

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_toRightOf="@+id/img5"
                        android:gravity="left|center"
                        android:textSize="20dip"
                        android:layout_marginLeft="10dp"

                        android:layout_gravity="center"

                        android:layout_marginBottom="2dp"
                        android:text="Message"
                        android:textColor="#020202"

                        android:textStyle="bold" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/new_message"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_toRightOf="@+id/img5"
                        android:gravity="left|center"
                        android:textSize="20dip"
                        android:layout_marginLeft="100dp"

                        android:layout_gravity="center"

                        android:layout_marginBottom="2dp"
                        android:text="New"
                        android:textColor="#ea0f0f"

                        android:textStyle="bold" />


                </LinearLayout>


            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:background="#736969"
                android:layout_height="1dp" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:background="#534b4b"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/lay2"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:background="@drawable/linear"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/book"
                        />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_toRightOf="@+id/img6"
                        android:textSize="20dip"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:layout_gravity="center"

                        android:layout_marginBottom="2dp"
                        android:text="Books Shop"
                        android:textColor="#000000"


                        android:textStyle="bold" />

                </LinearLayout>




            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:background="#736969"
                android:layout_height="1dp" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:background="#534b4b"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/lay3"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:elevation="2dp"
                    android:padding="20dp"
                    android:background="@drawable/linear"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/note"
                        />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_toRightOf="@+id/img7"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"                        android:textSize="20dip"

                        android:layout_gravity="center"                        android:layout_marginBottom="2dp"
                        android:text="Quick Note"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                </LinearLayout>




            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:background="#736969"
                android:layout_height="1dp" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_viewv4"
                android:background="#534b4b"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/layv3"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:elevation="2dp"
                    android:padding="20dp"
                    android:background="@drawable/linear"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgv7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/profile"
                        />

                    <TextView
                        android:id="@+id/textVview4"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_toRightOf="@+id/img7"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"                        android:textSize="20dip"

                        android:layout_gravity="center"                        android:layout_marginBottom="2dp"
                        android:text="My Profile "
                        android:textColor="#000000"
                        android:textStyle="bold" />

                </LinearLayout>




            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:background="#736969"
                android:layout_height="1dp" />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view44"
                android:background="#534b4b"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/lay34"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:elevation="2dp"
                    android:padding="20dp"
                    android:background="@drawable/linear"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img74"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/log"
                        />

                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_toRightOf="@+id/img7"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"                        android:textSize="20dip"

                        android:layout_gravity="center"                        android:layout_marginBottom="2dp"
                        android:text="LogOut"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                </LinearLayout>




            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:background="#736969"
                android:layout_height="1dp" />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view5"
                android:background="#534b4b"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/userlist_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:elevation="2dp"
                    android:background="@drawable/linear"
                    android:padding="20dp"

                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img57"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/user"
                        />

                    <TextView
                        android:id="@+id/textView54"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_toRightOf="@+id/img7"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:textSize="20dip"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:text="User List"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                </LinearLayout>




            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
