<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.Gone.Shop.ProfileEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:clickable="true"
                    android:id="@+id/edit_image"
                    android:layout_gravity="center"
                    android:src="@drawable/camera"
                    android:layout_width="match_parent"
                    android:layout_height="110dp" />

            </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="15dp"
                android:text="User Name"
                android:background="#4ba4af"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />
            </LinearLayout>

            <EditText

                android:gravity="left"
                android:textSize="16sp"
                android:textColor="#000000"
                android:hint="name"
                android:padding="15dp"
                android:background="#ffffff"
                android:textColorHint="#000000"
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="User Name"
                    android:background="#4ba4af"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            <EditText
                android:background="#ffffff"
                android:textColorHint="#000000"
                android:gravity="left"
                android:padding="15dp"

                android:textSize="16sp"
                android:textColor="#000000"
                android:hint="password"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:padding="15dp"
                            android:text="Division"
                            android:background="#4ba4af"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edit_division"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:gravity="left"
                            android:hint="division"
                            android:padding="15dp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="2"

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="20dp"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:text="District"
                            android:textStyle="bold"
                            android:background="#4ba4af"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/edit_district"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:hint="district"
                            android:background="#ffffff"
                            android:textColorHint="#000000"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="2"

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="20dp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:background="#4ba4af"

                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:text="Blood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/edit_blood"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:background="#ffffff"
                            android:textColorHint="#000000"
                            android:padding="15dp"

                            android:hint="Blood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>







                </LinearLayout>





                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:background="#4ba4af"

                            android:textStyle="bold"                            android:padding="15dp"
                            android:text="University"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edit_uni"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:gravity="left"
                            android:hint="University"
                            android:padding="15dp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:background="#4ba4af"

                            android:textStyle="bold"                            android:padding="15dp"
                            android:text="IDCARD"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edit_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:gravity="left"
                            android:padding="15dp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textStyle="bold"                            android:padding="15dp"
                            android:text="Contact"
                            android:background="#4ba4af"

                            android:textColor="#000"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edit_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:gravity="left"
                            android:hint="Contact"
                            android:padding="15dp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:background="#4ba4af"

                            android:textStyle="bold"                            android:padding="15dp"
                            android:text="DateOfBirth"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edit_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:gravity="left"
                            android:hint="DateOfBirth"
                            android:padding="15dp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>



                </LinearLayout>













            </LinearLayout>

           <Button
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:text="আপডেট"
                android:background="@drawable/bg_round_circle"
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
