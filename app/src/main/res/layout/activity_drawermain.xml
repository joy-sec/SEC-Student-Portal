<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lay12"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:foregroundGravity="center"
            android:background="@drawable/logo">
        </ImageView>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/img5"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:textSize="25dip"
            android:text="University Shop"
            android:textColor="#ffffff"
            android:textStyle="bold" />




    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_below="@+id/layy1"
        android:layout_width="fill_parent"
        android:scrollbars="none"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"

            android:orientation="vertical" >










            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:onClick="addProblem1"
                android:layout_weight="0.5"
                android:background="@color/colorAccent"
                android:layout_marginBottom="2dp"
                android:clickable="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow"
                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@+id/img5"
                    android:gravity="center"
                    android:textSize="15dip"
                    android:layout_marginLeft="1dp"
                    android:text="Sell Your book"
                    android:textColor="#ffffff"
                    android:paddingRight="70dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold" />



            </LinearLayout>



            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:onClick="myProblemList1"
                android:layout_weight="0.5"
                android:clickable="true"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    android:padding="20dp"

                    android:src="@drawable/arrow"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@+id/img6"
                    android:gravity="center"
                    android:textSize="15dip"
                    android:text="My Books Post"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:paddingRight="70dp"

                    android:textStyle="bold" />

            </LinearLayout>





            <LinearLayout
                android:id="@+id/lay3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:onClick="profile1"
                android:layout_weight="0.5"
                android:clickable="true"
                android:background="@color/colorAccent"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img65"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow"
                    />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@+id/img5"
                    android:gravity="center"
                    android:textSize="15dip"
                    android:layout_marginLeft="1dp"
                    android:text="My Profile"
                    android:paddingRight="70dp"

                    android:textColor="#ffffff"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold" />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/as1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:onClick="shop1"
                android:layout_weight="0.5"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img46"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    android:padding="20dp"

                    android:src="@drawable/arrow"
                    />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@+id/img6"
                    android:gravity="center"
                    android:textSize="15dip"
                    android:text="Book Shop"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:paddingRight="70dp"

                    android:textStyle="bold" />

            </LinearLayout>




        </LinearLayout>

    </ScrollView>



</LinearLayout>